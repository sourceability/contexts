{
    "name": "behatch/contexts",
    "description": "Behatch contexts",
    "keywords": ["BDD", "Behat", "Symfony2", "Context"],
    "type": "library",
    "license": "beerware",

    "require": {
        "php": ">=7.0",
        "behat/behat": "^3.0",
        "friends-of-behat/mink-extension": "^2.6.2",
        "justinrainbow/json-schema": "^5.0",
        "symfony/property-access": "^4.0|^5.0|^6.0",
        "symfony/http-foundation": "^4.0|^5.0|^6.0",
        "symfony/dom-crawler": "^4.0|^5.0|^6.0",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*"
    },

    "require-dev": {
        "behat/mink-goutte-driver": "^2.0",
        "guzzlehttp/guzzle": "^6.3",
        "behat/mink-selenium2-driver": "^1.4@dev",
        "atoum/atoum": "^3.0|^4.0",
        "fabpot/goutte": "^4.0",
        "symfony/browser-kit": "^6.1"
    },

    "autoload": {
        "psr-4": {
            "Behatch\\": "src/"
        }
    },

    "config": {
        "bin-dir": "bin/"
    },

    "replace": {
        "sanpi/behatch-contexts": "self.version"
    },

    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/sourceability/MinkExtension.git"
        }
    ]
}
